@using PracticeApp.Controllers

@model List<PracticeApp.Models.User>

<a class="btn btn-primary" href="@Url.Action(nameof(UsersController.Edit), "Users")">Добавить</a>

<table class="table table-striped table-bordered mt-2">
    <thead>
        <tr>
            <th>Логин</th>
            <th>Роль</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Login</td>
                <td>@u.RoleId</td> @* TODO: сделать вывод имени роли, а не ИД *@
                <td>
                    <a class="btn btn-secondary" href="@Url.Action(nameof(UsersController.Edit), "Users", new { id = @u.Id })">Изменить</a>

                    <button class="btn btn-danger"
                        onclick="confirm('Вы уверены?') && sendAction('@Url.Action(nameof(UsersController.Delete))', { id: @u.Id }, 'DELETE')"
                    >Удалить</button>
                </td>
            </tr>
        }
    </tbody>
</table>
